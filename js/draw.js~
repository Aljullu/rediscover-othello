var canvas = document.getElementById('tutorial');
var ctx = canvas.getContext('2d');

var cellRows = 8;
var cellColumns = cellRows;

var boardPadding = 25;

var cellHeight = 50;
var cellWidth = cellHeight;
var cellBorder = 1;

ctx.fillStyle = "rgb(0,25,0)";
ctx.fillRect (boardPadding, boardPadding, cellColumns*cellWidth, cellRows*cellHeight);

ctx.fillStyle = "rgb(0,50,0)";

for (var i = 0; i < cellRows; i++) {
	for (var j = 0; j < cellColumns; j++) {
		ctx.fillRect (boardPadding + cellWidth*i + cellBorder, boardPadding + cellHeight*j + cellBorder, cellWidth-cellBorder*2, cellHeight-cellBorder*2);
	}
}
